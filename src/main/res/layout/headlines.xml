<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_headline"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        app:contentPadding="2dp"
        android:elevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="2dp"
        android:layout_below="@+id/tv_headline_date"
        android:textSize="18sp"
        android:text="ghgc"/>

            <TextView
                android:id="@+id/tv_headline_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="ghgc"
                android:padding="2dp"/>
            </RelativeLayout>

            <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/iv_headline_pic"
            android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_headline_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="2dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_headline_2"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_headline_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_headline_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>